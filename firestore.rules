// Firestore Security Rules for AstroWise App
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Birth charts - users can only access their own
    match /birthCharts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Validate birth chart data structure
      allow write: if validateBirthChart(request.resource.data);
    }

    // Horoscopes - read access for authenticated users
    match /horoscopes/{date} {
      allow read: if request.auth != null;

      match /signs/{sign} {
        allow read: if request.auth != null;
        // Only allow admin writes (implement admin role later)
        allow write: if false; // TODO: Add admin role check
      }
    }

    // User interpretations - private to each user
    match /interpretations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Shared charts for social features (future implementation)
    match /sharedCharts/{chartId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.uid == resource.data.ownerId;
    }

    // Helper functions
    function validateBirthChart(data) {
      return data.keys().hasAll(['chartData', 'calculatedAt', 'userId']) &&
             data.userId is string &&
             data.chartData is map &&
             data.calculatedAt is timestamp;
    }

    function isAdmin() {
      // TODO: Implement admin role checking
      // return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
      return false;
    }
  }
}

